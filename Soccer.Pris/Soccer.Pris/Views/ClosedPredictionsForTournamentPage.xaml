<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:i18n="clr-namespace:Soccer.Pris.Helpers"
             x:Class="Soccer.Pris.Views.ClosedPredictionsForTournamentPage"
             IconImageSource="ic_action_tag_faces"
             BackgroundColor="{StaticResource ColorBackgroud}"
             Title="{Binding Title}">
    <AbsoluteLayout>
        <StackLayout AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All"
                     Padding="5">
            <CollectionView ItemsSource="{Binding Predictions}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     VerticalItemSpacing="5">
                        
                    </GridItemsLayout>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10">
                            <StackLayout>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackLayout Grid.Column="0">
                                        <ffimageloading:CachedImage Aspect="AspectFit"
                                                                    CacheDuration= "50"
                                                                    HeightRequest="90"
                                                                    RetryCount= "3"
                                                                    RetryDelay= "600"
                                                                    Source="{Binding Match.Local.LogoFullPath}" 
                                                                    WidthRequest="90"/>
                                        <Label HorizontalOptions="Center" 
                                               HorizontalTextAlignment="Center"
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"
                                               Text="{Binding Match.Local.Name}"
                                               WidthRequest="90"/>
                                        <Label HorizontalOptions="Center" 
                                               FontAttributes="Bold"
                                               FontSize="Large"
                                               Text="{i18n:Translate Real}"
                                               TextColor="{StaticResource ColorAccent}"/>
                                        <StackLayout HorizontalOptions="Center" 
                                                     Orientation="Horizontal">
                                            <Label FontAttributes="Bold"
                                                   FontSize="48"
                                                   HorizontalTextAlignment="Center"
                                                   Text="{Binding Match.GoalsLocal}"
                                                   WidthRequest="45"/>
                                            <Label Text="Vs."
                                                   VerticalOptions="Center"/>
                                            <Label FontAttributes="Bold"
                                                   FontSize="48"
                                                   HorizontalTextAlignment="Center"
                                                   Text="{Binding Match.GoalsVisitor}"
                                                   WidthRequest="45"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout Grid.Column="1"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center">
                                        <StackLayout BackgroundColor="{StaticResource ColorAccent}" 
                                                     HorizontalOptions="Center"
                                                     Padding="5"
                                                     Orientation="Vertical">
                                            <Label FontAttributes="Bold"  
                                                   FontSize="Medium"
                                                   HorizontalTextAlignment="Center"
                                                   Text="{i18n:Translate Points}"
                                                   TextColor="{StaticResource ColorFontInverse}"/>
                                            <Label FontAttributes="Bold"  
                                                   FontSize="48" 
                                                   HorizontalTextAlignment="Center" 
                                                   Text="{Binding Points}"
                                                   TextColor="{StaticResource ColorFontInverse}"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout Grid.Column="2">
                                        <ffimageloading:CachedImage Aspect="AspectFit"
                                                                    CacheDuration= "50"
                                                                    HeightRequest="90"
                                                                    RetryCount= "3"
                                                                    RetryDelay= "600"
                                                                    Source="{Binding Match.Visitor.LogoFullPath}" 
                                                                    WidthRequest="90"/>
                                        <Label HorizontalOptions="Center" 
                                               HorizontalTextAlignment="Center"
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"
                                               Text="{Binding Match.Visitor.Name}"
                                               WidthRequest="90"/>
                                        <Label HorizontalOptions="Center" 
                                               FontAttributes="Bold"
                                               FontSize="Large"
                                               Text="{i18n:Translate Prediction}"
                                               TextColor="{StaticResource ColorAccent}"/>
                                        <StackLayout HorizontalOptions="Center" 
                                                     Orientation="Horizontal">
                                            <Label FontAttributes="Bold"
                                                   FontSize="48"
                                                   HorizontalTextAlignment="Center"
                                                   Text="{Binding GoalsLocal}"
                                                   WidthRequest="45"/>
                                            <Label Text="Vs."
                                                   VerticalOptions="Center"/>
                                            <Label FontAttributes="Bold"
                                                   FontSize="48"
                                                   HorizontalTextAlignment="Center"
                                                   Text="{Binding GoalsVisitor}"
                                                   WidthRequest="45"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
        <ActivityIndicator
            AbsoluteLayout.LayoutBounds=".5,.5,.5,.5"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="{StaticResource ColorAccent}"
            HorizontalOptions="Center"
            Color="{StaticResource ColorFontInverse}"
            IsVisible="{Binding IsRunning}"
            VerticalOptions="Center"
            
            />
        
    </AbsoluteLayout>
</ContentPage>